<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import com.jfoenix.controls.JFXButton?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.company.Controllers.Client.ScoreboardController"
            prefHeight="400.0" prefWidth="600.0" styleClass="main-menu-root">
    <ImageView fx:id="back" fitWidth="100" fitHeight="100" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0">
        <Image url="@../images/back-button.png"/>
    </ImageView>

    <ScrollPane hbarPolicy="NEVER" fx:id="scrollPane">
        <VBox fx:id="scoreBoard" alignment="CENTER">
            <JFXButton fx:id="updateScoreBoard" text="Refresh" onAction="#updateScoreBoard" styleClass="deck-back-button"/>
        </VBox>
    </ScrollPane>

</AnchorPane>
